{
  "expo": {
    "name": "Chorelito AI",
    "slug": "chorelito-ai",
    "scheme": "chorelito",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFDF9"
    },
    "android": {
      "package": "com.chorelito.app",
      "permissions": ["RECORD_AUDIO", "CAMERA", "POST_NOTIFICATIONS", "MODIFY_AUDIO_SETTINGS"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E8F7FF"
      }
    },
    "ios": {
      "bundleIdentifier": "com.chorelito.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access for voice controls to manage chores and screen time."
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "sdkVersion": "52.0.0"
  }
}
