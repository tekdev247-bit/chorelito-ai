rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Parents collection - allow all operations for now
    match /parents/{parentId} {
      allow read, write: if true;
    }
    
    // Children collection - allow all operations for now
    match /children/{childId} {
      allow read, write: if true;
    }
    
    // Family chores collection - allow all operations for now
    match /family_chores/{choreId} {
      allow read, write: if true;
    }
    
    // Chores collection (assignments) - allow all operations for now
    match /chores/{choreId} {
      allow read, write: if true;
    }
    
    // Screen time collection - allow all operations for now
    match /screenTime/{entryId} {
      allow read, write: if true;
    }
    
    // Reports collection - allow all operations for now
    match /reports/{reportId} {
      allow read, write: if true;
    }
    
    // Time requests collection
    match /timeRequests/{requestId} {
      allow read, write: if true;
    }
    
    // Invites collection
    match /invites/{inviteId} {
      allow read, write: if true;
    }
    
    // Events/audit log collection
    match /events/{eventId} {
      allow read, write: if true;
    }
  }
}

